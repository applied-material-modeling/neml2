${CMAKE_COMMAND} \
  -DCMAKE_GENERATOR="${CMAKE_GENERATOR}" \
  -DCMAKE_C_COMPILER=${CMAKE_C_COMPILER} \
  -DCMAKE_CXX_COMPILER=${CMAKE_CXX_COMPILER} \
  -DCMAKE_CXX_FLAGS=${WASP_CXX_FLAGS} \
  -DCMAKE_BUILD_TYPE=Release \
  -DCMAKE_INSTALL_PREFIX=${WASP_INSTALL_DIR} \
  -DCMAKE_POSITION_INDEPENDENT_CODE=ON \
  -Dwasp_ENABLE_ALL_PACKAGES=OFF \
  -Dwasp_ENABLE_wasphit=ON \
  -Dwasp_ENABLE_testframework=OFF \
  -Dwasp_ENABLE_TESTS=OFF \
  -DBUILD_SHARED_LIBS=OFF \
  -S${WASP_SOURCE_DIR} \

${CMAKE_COMMAND} --build ${WASP_WORKING_DIR}
${CMAKE_COMMAND} --install ${WASP_WORKING_DIR}
